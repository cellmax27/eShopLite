@page
@model FruitsModel
@{
    ViewData["Title"] = "Liste des Fruits";
}

<h1>Liste des Fruits</h1>
<table border="1">
    <tr>
        <th>ID</th>
        <th>Produit</th>
        <th>Quantité</th>
        <th>Prix</th>
    </tr>
    @foreach (var fruit in Model.Fruits)
    {
        <tr>
            <td>@fruit.Id</td>
            <td>@fruit.Instock</td>
            <td>@fruit.Name</td>
        </tr>
    }
</table>
